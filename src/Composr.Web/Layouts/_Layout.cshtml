@inject Composr.Core.Blog Blog
@{ 
    var logo = Blog.Attributes.SingleOrDefault(x => x.Key == Composr.Core.BlogAttributeKeys.LogoUrl).Value;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />    
    <meta charset="UTF-8" /> 
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("css", required: false)
    <title>@ViewBag.Title</title>
    <style>
       .btn-toolbar{
           margin-bottom:5px;
       }

       .error{
           color:red;
           font-weight:bolder;
       }

       footer{           
           padding: 10px 10px 10px 10px;
       }

       .footerlogo{
           background-color:rgb(70, 66, 66);
           padding: 10px 10px 10px 10px;
       }

       .navbar-form{
           padding-left:0;
       }
    </style>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a href="/admin/blogs/@Blog.Id/posts"><img class="navbar-form" src="@(string.IsNullOrWhiteSpace(logo)? $"~/img/composr-logo.png":logo)"/></a>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                @await Html.PartialAsync("_LoginPartial")
                <div class="pull-right">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="search" class="form-control" placeholder="search" name="search" id="search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>                        
                    </form>      
                </div>
                
            </div>
        </div>
    </nav>
    <section class="container">
        @RenderBody()
        <hr>        
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Programagic&copy; @DateTime.Now.Year</span></p>
                </div>
            </div>
        </footer>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
