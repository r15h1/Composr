@model Composr.Web.ViewModels.BaseFrontEndViewModel
@{ var ampstyle = @"<style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>";}
<!DOCTYPE html>
<html amp lang="en">
<head>
    <meta charset="utf-8">
    <title>Hello, AMPs</title>
    <link rel="canonical" href="http://cocozil.com:5000/" />
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Roboto:200,300,400,500,700" rel="stylesheet" type="text/css">
    
    @Html.Raw(@ampstyle)

    <style amp-custom>
         /*
            go from larger to smaller
            @@media only screen and (max-width : 800px){
            .container {
                 max-width: 800px;
                 margin: 0 auto;
            }
        }

        @@media only screen and (max-width : 355px){
            .container {
                 width: 100%;
                 margin: 0 auto;
            }
        }*/

        @@media only screen and (min-width: 1010px){
            .container {
                 max-width: 1000px;
                 margin: 0 auto;
            }
        }

        @@media only screen and (max-width: 1009px){
            .container {
                 margin:3px 5px 3px 5px;
            }
        }


       

        body {
            font-family:Roboto,verdana,arial,sans-serif;
            line-height:20px;
        }

        p {
            font-size: 1.1em;
            text-align: justify;
        }

        h1{
            font-family: 'Open Sans'; 
        }

        ul{
            list-style:none;
            margin-left:0;
            padding-left:0;
        }

        .search-result{
            padding:0 0 5px 0;
        }

        .search-result-heading{
            margin-bottom:5px;
        }

        .search-results-urn{
            color:green;
        }
        
    </style>
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-carousel" src="https://cdn.ampproject.org/v0/amp-carousel-0.1.js"></script>
</head>
<body>
    @Html.Partial("NavigationPartialView", Model)
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
