@model Composr.Web.ViewModels.BaseFrontEndViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />    
    <meta charset="UTF-8" /> 
    @if (!string.IsNullOrWhiteSpace(@Model.CanonicalUrl))
    {
        @Html.Raw($"<link rel=\"canonical\" href=\"{@Model.CanonicalUrl}\">");
    }
    <link href='https://fonts.googleapis.com/css?family=Open+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Playfair+Display' rel='stylesheet' type='text/css'>
    <link href="~/themes/writer/site.min.css" rel="stylesheet" />
    @RenderSection("css", required: false)
    <title>@Model.Title</title>    
</head>
<body>    
        <section class="bodywrapper">
            <div class="container">
                <div style="background-color:rgba(255, 255, 255, 0.50);border:none;border-radius:0;margin-bottom:15px;">
                    <a href="/" class="logo">
                        <h2 style="padding-top:15px;font-weight:600;">Programagic</h2>
                        <span style="margin-top:15px;font-weight:600;">Programming Ideas & Experiments</span>
                    </a>
                </div>
            </div>

            <section>
                <div class="container">
                    @RenderBody()
                    <!-- Footer -->
                    <footer>
                        <div class="row">
                            <p class="col-lg-2 col-md-3 col-sm-4 col-xs-7">@Model.Copyright</p>
                            <p class="col-lg-2 col-md-3 col-sm-4 col-xs-7">&copy;Programagic @DateTime.Today.Year</p>
                        </div>                        
                    </footer>
                </div>
            </section>

        </section>
    <script src="~/themes/writer/site.min.js"></script>
    @if (!string.IsNullOrWhiteSpace(@Model.AnalyticsTrackingJSCode))
    {
        @Html.Raw(@Model.AnalyticsTrackingJSCode);
    }
</body>
</html>
