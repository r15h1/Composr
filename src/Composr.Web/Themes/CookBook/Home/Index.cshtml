<div id="myCarousel" class="container carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <a href="/mauritius/cooking/banana-fritter-recipe">
                <div style="background:url('images/cocozil/gateau-banane-banana-fritter-sm.jpg') center center; background-size:cover;" class="slider-size">
                    <div class="carousel-caption">
                        <p class="carousel-caption-text">Banana Fritter</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="item">
            <a href="/mauritius/cooking/ladoo-recipe">
                <div style="background:url('images/cocozil/ladoo-sm.jpg') center center; background-size:cover;" class="slider-size">
                    <div class="carousel-caption">
                        <p class="carousel-caption-text">Besan Ladoo</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="item">
            <a href="/mauritius/cooking/butter-chicken-recipe">
                <div style="background:url('images/cocozil/butter-chicken-sm.jpg') center center; background-size:cover;" class="slider-size">
                    <div class="carousel-caption">
                        <p class="carousel-caption-text">Butter Chicken</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="item">
            <a href="/mauritius/cooking/alouda-cold-milk-recipe">
                <div style="background:url('images/cocozil/alouda-cold-milk-beverage-sm.jpg') center center; background-size:cover;" class="slider-size">
                    <div class="carousel-caption">
                        <p class="carousel-caption-text">Alouda Cold Milk</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="item">
            <a href="/mauritius/cooking/cassava-pudding-recipe">
                <div style="background:url('images/cocozil/poudine-manioc-cassava-pudding-sm.jpg') center center; background-size:cover;" class="slider-size">
                    <div class="carousel-caption">
                        <p class="carousel-caption-text">Cassava Pudding</p>
                    </div>
                </div>
            </a>
        </div>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<h2>Recipes</h2>
<p>Type something (e.g. <i>chicken</i>) in the search box at the top to find more recipes.</p>
