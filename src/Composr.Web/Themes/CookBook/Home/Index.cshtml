@model Composr.Web.ViewModels.PostSearchViewModel

<section class="container">
    <h1>Mauritian Cuisine</h1>
    <p>A spicy, colourful, aromatic and incredibly tasty blend of native African, French, Chinese and Indian cuisine that reflects the ethnic diversity of the people of Mauritius.</p>
</section>

<div id="myCarousel" class="container carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <!--<img src="slider/bolet.jpg" alt="Chania" class="carouselimg">-->
            <div style="background:url('data1/images/buns.jpg') center center; background-size:cover;" class="slider-size">
                <div class="carousel-caption">
                    <p class="carousel-caption-text">Hot and spicy, heart warming broth with dumplings</p>
                </div>
            </div>
        </div>

        <div class="item">
            <!--<img src="slider/fc.jpg" alt="Fish and Chips" class="carouselimg">-->
            <div style="background:url('data1/images/croissant.jpg') center center; background-size:cover;" class="slider-size">
                <div class="carousel-caption">
                    <p class="carousel-caption-text">Hot and spicy, heart warming broth with dumplings</p>
                </div>
            </div>
        </div>

        <div class="item">
            <!--<img src="slider/flan.jpg" alt="Flower" class="carouselimg">-->
            <div style="background:url('data1/images/teaandcake.jpg') center center; background-size:cover;" class="slider-size">
                <div class="carousel-caption">
                    <p class="carousel-caption-text">Dessert</p>
                </div>
            </div>
        </div>


        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<section class="container">    
    <h2>Popular Recipes</h2>
    <section class="row">
        @foreach (var result in Model.SearchResults)
        {
            <ul>
                <li class="col-md-3 col-sm-4">
                    <div class="polaroid">
                        <a href="@result.URN">
                            <h3 class="polaroid-header">@result.Title</h3>
                            <figure>
                                <img class="img-thumbnail polaroid-img" src="@result.Thumbnail" alt="@result.Title">
                            </figure>
                        </a>
                    </div>
                </li>
            </ul>
        }
    </section>
</section>