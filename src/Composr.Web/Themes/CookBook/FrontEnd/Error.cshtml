@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<section class="container">
    <h1>@Localizer["Lost at Sea!"]</h1>
    <img class="img-responsive img-details-page" src="~/themes/cookbook/404.png" alt="page not found"/><br/>
    <p>@Localizer["We're sorry! The page you are trying to visit is lost at sea."] @Localizer["But we will help you swim back to the shore in"] <span id="timeLeft" class="label label-warning">15</span> @Localizer["seconds."]</p>
    <p><a href="@Localizer["/"]">@Localizer["Or you can click here to go to the home page now."]</a></p>
    @section scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                window.setInterval(function () {
                    var timeLeft = $("#timeLeft").html();
                    if (eval(timeLeft) == 0) {
                        window.location = ("@Localizer["/"]");
                    } else {
                        $("#timeLeft").html(eval(timeLeft) - eval(1));
                    }
                }, 1000);
            });
        </script>
    }
</section>