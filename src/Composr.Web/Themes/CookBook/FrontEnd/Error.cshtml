@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<section class="container">
    <h1>@Localizer["Page Not Found"]</h1>
    <p>@Localizer["The page you are trying to visit does not exist."]</p>
    <p>@Localizer["You will be redirected to the home page in"] <span id="timeLeft" class="label label-warning">10</span> @Localizer["seconds."]</p>
    <p><a href="/">@Localizer["Click here to go to the home page now."]</a></p>

    @section scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                window.setInterval(function () {
                    var timeLeft = $("#timeLeft").html();
                    if (eval(timeLeft) == 0) {
                        window.location = ("/");
                    } else {
                        $("#timeLeft").html(eval(timeLeft) - eval(1));
                    }
                }, 1000);
            });
        </script>
    }
</section>