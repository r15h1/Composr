@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IOptions<RequestLocalizationOptions> LocOptions
@inject IViewLocalizer Localizer

@model Composr.Web.ViewModels.BaseFrontEndViewModel

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>().RequestCulture.Culture;
}
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Model.BlogUrl"><img src="@Model.LogoUrl"></a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <form class="navbar-form navbar-left" role="search" method="get" action="@Localizer["/en/search"]">
                <div class="form-group input-group search-group">
                    <input type="text" class="form-control" placeholder="@Localizer["search e.g. chicken"]" name="q" id="q">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
            <ul class="nav navbar-nav navbar-left navbar-form">
                <li class="dropdown">
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">
                        @Localizer["Browse Recipes"]  <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="@Localizer["/en/search?cat=chicken"]" rel="nofollow">@Localizer["Chicken Recipes"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=curry"]" rel="nofollow">@Localizer["Curry"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=dessert"]" rel="nofollow">@Localizer["Desserts"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=fish"]" rel="nofollow">@Localizer["Fish Recipes"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=grill"]" rel="nofollow">@Localizer["Grilled"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=meat"]" rel="nofollow">@Localizer["Meat Recipes"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=pudding"]" rel="nofollow">@Localizer["Puddings"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=rice"]" rel="nofollow">@Localizer["Rice Dishes"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=salad"]" rel="nofollow">@Localizer["Salads"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=streetfood"]" rel="nofollow">@Localizer["Street Food"]</a></li>
                        <li><a href="@Localizer["/en/search?cat=vegetarian"]" rel="nofollow">@Localizer["Vegetarian"]</a></li>
                    </ul>
                </li>
            </ul>
            <div class="nav navbar-nav navbar-right navbar-form">
                @await Html.PartialAsync("LanguageSelectionPartialView")
            </div>
        </div>
    </div>
</nav>