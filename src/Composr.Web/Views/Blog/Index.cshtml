@model IEnumerable<Composr.Core.Blog>

@{
    ViewBag.Title = "Blogs";
}

<ol class="breadcrumb">
    <li class="active">blogs</li>    
</ol>

<div class="btn-toolbar" role="toolbar">
    <a class="btn btn-primary pull-right" id="newbutton" href="/admin/blogs/new">New Blog</a>
</div>

<div class="table-responsive">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-condensed table-hover">
            <thead>
                <tr>
                    <th class="col-md-1 col-sm-1 col-xs-1">Blog Id</th>
                    <th class="col-md-4 col-sm-4 col-xs-4">Name</th>
                    <th class="col-md-6 col-sm-6 col-xs-6">Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Id</td>
                        <td><a href="/admin/blogs/@blog.Id/posts">@blog.Name</a></td>
                        <td>@blog.Description</td>
                        <td class="text-center"><a href="/admin/blogs/@blog.Id"><i class="glyphicon glyphicon-edit" data-toggle="tooltip" title="edit this blog"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <span>No blogs found</span>
    }

</div>